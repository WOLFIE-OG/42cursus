all:
	@echo "\n=======================================================\n"
	$(MAKE) -s -C libft
	@echo "\n=======================================================\n"
	$(MAKE) -s -C ft_printf
	@echo "\n=======================================================\n"
	$(MAKE) -s -C get_next_line
	@echo "\n=======================================================\n"
	$(MAKE) -s -C minitalk
	@echo "\n=======================================================\n"
	$(MAKE) -s -C push_swap
	@echo "\n=======================================================\n"

clean:
	@echo "\n=======================================================\n"
	$(MAKE) -s -C libft clean
	@echo "\n=======================================================\n"
	$(MAKE) -s -C ft_printf clean
	@echo "\n=======================================================\n"
	$(MAKE) -s -C get_next_line clean
	@echo "\n=======================================================\n"
	$(MAKE) -s -C minitalk clean
	@echo "\n=======================================================\n"
	$(MAKE) -s -C push_swap clean
	@echo "\n=======================================================\n"

fclean:
	@echo "\n=======================================================\n"
	$(MAKE) -s -C libft fclean
	@echo "\n=======================================================\n"
	$(MAKE) -s -C minitalk fclean
	@echo "\n=======================================================\n"
	$(MAKE) -s -C push_swap fclean
	@echo "\n=======================================================\n"

re:
	@echo "\n=======================================================\n"
	$(MAKE) -s -C libft fclean
	@echo "\n=======================================================\n"
	$(MAKE) -s -C ft_printf re
	@echo "\n=======================================================\n"
	$(MAKE) -s -C get_next_line re
	@echo "\n=======================================================\n"
	$(MAKE) -s -C minitalk re
	@echo "\n=======================================================\n"
	$(MAKE) -s -C push_swap re
	@echo "\n=======================================================\n"